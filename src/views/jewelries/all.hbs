<form method="GET">
  <div class="center-container">
    <div class="checkbox-list">
      <div class="dropdown-checkboxes" role="list" tabindex="0">
        <label for="byMetal">
          <strong class="label-title">By Metal</strong>
          <i class="space fa-solid fa-sort-down"></i>
          <div class="dropdown-checkboxes-content">
            {{#each metalsByCount}}
              <div class="dropdown-subfield">
                <input
                  type="checkbox"
                  id="{{title}}"
                  name="Metal"
                  value="{{_id}}"
                />
                <label for="{{title}}">
                  {{title}}
                  ({{count}})</label><br />
              </div>
            {{/each}}
            <br />
            <button class="drop-down-button button filled_pink">Apply</button>
          </div>
        </label>
      </div>
      <div class="dropdown-checkboxes" role="list" tabindex="0">
        <label for="byStoneType">
          <strong class="label-title">By Stone Type</strong>
          <i class="space fa-solid fa-sort-down"></i>
          <div class="dropdown-checkboxes-content">
            {{#each stoneTypesByCount}}
              <div class="dropdown-subfield">
                <input
                  type="checkbox"
                  id="{{title}}"
                  name="StoneType"
                  value="{{_id}}"
                />
                <label for="{{title}}">
                  {{title}}
                  ({{count}})</label><br />
              </div>
            {{/each}}
            <br />
            <button class="drop-down-button button filled_pink">Apply</button>
          </div>
        </label>
      </div>
      <div class="dropdown-checkboxes" role="list" tabindex="0">
        <label for="byStoneColor">
          <strong class="label-title">By Stone Color</strong>
          <i class="space fa-solid fa-sort-down"></i>
          <div class="dropdown-checkboxes-content">
            {{#each stoneColorsByCount}}
              <div class="dropdown-subfield">
                <input
                  type="checkbox"
                  id="{{title}}"
                  name="StoneColor"
                  value="{{_id}}"
                />
                <label for="{{title}}">
                  {{title}}
                  ({{count}})</label><br />
              </div>
            {{/each}}
            <br />
            <button class="drop-down-button button filled_pink">Apply</button>
          </div>
        </label>
      </div>
    </div>
  </div>
</form>
<section class="jewelry-cards">
  {{#each jewelries}}
    <article class="jewelry-card">
      <div class="jewelry-card-thumbnail">
        <a href="/jewelries/{{_id}}/details" title="{{title}}">
          <img
            class="jewelry-card-img"
            src="{{firstImageUrl}}"
            alt="{{title}} image"
          />
        </a>
        {{>like-button-forms}}
        <div class="jewelry-card-content">
          <p class="jewelry-card-description">
            <ul class="jewelry-card-meta" role="list">
              <li class="jewelry-card-meta-item">
                {{title}}
              </li>
              <li class="jewelry-card-meta-item">
                {{category.title}}
              </li>
              <li class="jewelry-card-meta-item">
                <i class="price__icon fa-solid fa-sack-dollar"></i>
                {{price}}
              </li>
            </ul>
          </p>
        </div>
      </div>
    </article>
  {{/each}}
</section>