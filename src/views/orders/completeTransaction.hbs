<section class="form-container">
  <div>
    <form method="POST">
      <h4 class="form-title">Card Details</h4>
      <ul role="list">
        <li class="form-item">
          Card Number:
        </li>
        <li class="form-item">
          <input
            type="text"
            id="longCardNumber"
            name="longCardNumber"
            placeholder="Enter Valid Card Number"
          />
        </li>
        <li class="form-item">
          Expiration Date:
        </li>
        <li class="form-item">
          <input
            type="lastName"
            id="expirationDate"
            name="expirationDate"
            placeholder="MM/YY"
          />
        </li>
        <li class="form-item">
          CVV:
        </li>
        <li class="form-item">
          <input
            type="phoneNumber"
            id="cvvCode"
            name="cvvCode"
            placeholder="Enter CVV Code"
          />
        </li>
      </ul>
      <span class="card-element-field">
        <button class="button hover filled_pink" type="submit"><i
            class="fa-regular fa-credit-card"
          ></i>
          Make Payment</button>
      </span>
    </form>
  </div>
  <div class="form-img-container">
    <img
      class="form-img"
      src="https://res.cloudinary.com/deztgvefu/image/upload/v1706546636/template_images/MobileWallet_CB2_mobile_shxokh.jpg"
      alt="image"
    />
  </div>
</section>