<div class="success-container">
  {{#each messages.success}}
    <label for="closeSuccess" class="close-button">×</label>
    <input
      type="checkbox"
      id="successCheckbox{{forloop.index}}"
      class="success-checkbox"
    />
    <div class="success" id="successContainer{{forloop.index}}">
      <label
        for="successCheckbox{{forloop.index}}"
        class="close-button"
      >×</label>
      {{this}}
    </div>
  {{/each}}
</div>
<section class="profile-container">
  <div>
    <form method="POST">
      <h4 class="profile-container-title">Personal Information</h4>
      <ul role="list">
        <li class="form-item">
          Your First Name
        </li>
        <li class="form-item">
          <input
            type="text"
            id="firstName"
            value="{{profile.firstName}}"
            name="firstName"
            placeholder="Enter Your First Name"
          />
        </li>
        <li class="form-item">
          Your Surname
        </li>
        <li class="form-item">
          <input
            type="text"
            id="lastName"
            value="{{profile.lastName}}"
            name="lastName"
            placeholder="Enter Your Last Name"
          />
        </li>
        <li class="form-item">
          Your Phone Number
        </li>
        <li class="form-item">
          <input
            type="text"
            id="phoneNumber"
            value="{{profile.phoneNumber}}"
            name="phoneNumber"
            placeholder="Enter Your Phone Number"
          />
        </li>
      </ul>
      <h4 class="profile-container-title">Delivery Information</h4>
      <ul role="list">
        <li class="form-item">
          Country
        </li>
        <li class="form-item">
          <input
            type="text"
            id="country"
            value="{{profile.country}}"
            name="country"
            placeholder="Enter Your Country"
          />
        </li>
        <li class="form-item">
          City
        </li>
        <li class="form-item">
          <input
            type="text"
            id="city"
            value="{{profile.city}}"
            name="city"
            placeholder="Enter Your City"
          />
        </li>
        <li class="form-item">
          Address
        </li>
        <li class="form-item">
          <input
            type="text"
            id="address"
            value="{{profile.address}}"
            name="address"
            placeholder="Enter Your Address"
          />
        </li>
      </ul>
      <button
        class="edit-btn button hover filled_green profile-buttons"
        type="submit"
      ><i class="fa-regular fa-floppy-disk"></i>
        Confirm and Save
      </button>
    </form>
  </div>
  <div class="flex-sub-container">
    <div class="flex-profile-container">
      <div>
        <form method="post" action="/users/change-password">
          <h4 class="profile-container-title">Update Password</h4>
          <ul role="list">
            <li class="form-item">
              <input
                type="password"
                id="oldPassword"
                placeholder="Enter your current password"
                name="oldPassword"
              />
            </li>
            <li class="form-item">
              <input
                type="password"
                id="password"
                placeholder="Enter your password"
                name="password"
              />
            </li>
            <li class="form-item">
              <input
                type="password"
                id="repeatPassword"
                placeholder="Confirm your password"
                name="repeatPassword"
              />
            </li>
          </ul>
          <input type="hidden" name="next" />
          <button
            class="register-button button filled_green profile-buttons"
          >Submit</button>
        </form>
      </div>
      <div>
        <form method="post" action="/users/change-email">
          <h4 class="profile-container-title">Update Email Address</h4>
          <ul role="list">
            <li class="form-item">
              <input
                type="text"
                id="email"
                placeholder="Enter your email"
                value="{{email}}"
                name="email"
              />
            </li>
            <li class="form-item">
              <input
                type="password"
                id="password"
                placeholder="Enter your password"
                name="password"
              />
            </li>
          </ul>
          <input type="hidden" name="next" />
          <button
            class="register-button button filled_green profile-buttons"
          >Submit</button>
        </form>
      </div>

      <div>
        <div>
          <button
            style="margin-top: 4vh;"
            class="edit-btn button hover filled_pink profile-buttons"
          >
            <a href="/orders-history/{{user._id}}">
              <i class="fa-solid fa-clock-rotate-left"></i>
              Orders History
            </a>
          </button>
        </div>
        <div>
          <button
            style="margin-top: 4vh;"
            class="edit-btn button hover filled_yellow profile-buttons"
          >
            <a href="/users/logout">
              <i class="fa-solid fa-arrow-right-from-bracket"></i>
              Logout
            </a>
          </button>
        </div>
        <div>
          <button
            style="margin-top: 4vh;"
            class="edit-btn button hover filled_red profile-buttons"
          >
            <a href="/users/delete-confirmation">
              <i class="fa-solid fa-user-slash"></i>
              Delete Profile
            </a>
          </button>
        </div>
      </div>
    </div>
    <div class="orders-history-img-container">
      <img
        class="hero-img"
        src="https://res.cloudinary.com/deztgvefu/image/upload/v1707674135/template_images/newshero19_candyny_gm6tqg.webp"
        alt=""
      />
    </div>
  </div>

</section>