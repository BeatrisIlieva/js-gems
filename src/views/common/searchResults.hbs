{{#unless jewelries}}
<div class="no-results-found">
  <p><i>No jewelry items matching your search criteria were found.</i></p>
  <h4><i>Explore our collections below</i></h4>
</div>
{{>discover}}
{{else}}
<section class="jewelry-cards">
  {{#each jewelries}}
    <article class="jewelry-card">
      <div class="jewelry-card-thumbnail">
        <a href="/jewelries/{{_id}}/details" title="{{title}}">
          <img
            class="jewelry-card-img"
            src="{{firstImageUrl}}"
            alt="{{title}} image"
          />
        </a>
        {{>like-button-forms}}
        <div class="jewelry-card-content">
          <p class="jewelry-card-description">
            <ul class="jewelry-card-meta" role="list">
              <li class="jewelry-card-meta-item">
                <i>{{jewelryTitle}}</i>
              </li>
              <li class="jewelry-card-meta-item">
                {{categoryTitle}}
              </li>
              <li class="jewelry-card-meta-item">
                <i class="price__icon fa-solid fa-sack-dollar"></i>
                {{price}}
              </li>
            </ul>
          </p>
        </div>
      </div>
    </article>
  {{/each}}
</section>
{{#if loadMoreDisabled}}
<form action="/search" method="GET">
    <button class="load-more-button" disabled type="submit" name="loadMore" value="loadMore">LOAD MORE</button>
</form>
{{else}}
<form action="/search" method="GET">
    <button class="load-more-button" type="submit" name="loadMore" value="loadMore">LOAD MORE</button>
</form>
{{/if}}
{{/unless}}

