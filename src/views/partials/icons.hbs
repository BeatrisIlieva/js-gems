<div class="icon-container">
  <form method="GET">
    <input
      type="checkbox"
      id="search-toggle"
      class="search-toggle"
      value="{{search}}"
      name="search"
      placeholder="Find Jewelry"
    />
    <input
      class="search"
      name="search"
      value="{{search}}"
      placeholder="Find a Jewelry"
      style="text-align: center"
    />
    <label for="search-toggle" class="search-icon">
      <i
        class="button-no-margin-left icon-button fa-solid fa-magnifying-glass"
      ></i>
    </label>
  </form>
  {{#if likesCount}}
    <a href="/likes/">
      <i class="fa-regular fa-heart"></i>
      <span class="likes-count-nav">({{likesCount}})</span>
    </a>
  {{else}}
    <a href="/likes/">
      <i class="fa-regular fa-heart"></i>
    </a>
  {{/if}}
  {{#if bagCount}}
    <a href="/bag/{{user._id}}">
      <i class="icon-button fa-solid fa-bag-shopping"></i>
      <span class="cart-count-nav">({{bagCount}})</span>
    </a>
  {{else}}
    <a href="/bag/{{user._id}}">
      <i class="icon-button fa-solid fa-bag-shopping"></i>
    </a>
  {{/if}}
  <a href="/orders-history/{{user._id}}">
    <i class="fa-solid fa-clock-rotate-left"></i>
  </a>
  {{#unless isAuthenticated}}
    <a href="/users/login">
      <i class="icon-button fa-regular fa-user"></i>
    </a>
  {{else}}
    <a href="/profiles/edit">
      <i class="icon-button fa-regular fa-user"></i>
    </a>
  {{/unless}}
  <a href="/orders-history/{{user._id}}">
    <i class="fa-solid fa-arrow-right-from-bracket"></i>
  </a>
</div>

